<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.solvd.OnlineShop.dao.IShopDAO">
    <resultMap type = "com.solvd.OnlineShop.bin.Shop"
               id= "ShopResultMap"   autoMapping="false">
        <id column="id" property="id" />
        <result column = "name" property = "name"/>
        <result column = "web_page" property = "webPage"/>
        <result column = "phone_number" property = "phoneNumber"/>
    </resultMap>

    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="true">
        Insert into Shops (name,web_page,phone_number) values (#{shop.name},#{shop.webPage},#{shop.phoneNumber})
    </insert>

    <update id="updateEntity">
        Update Shops set name=#{shop.name},web_page=#{shop.webPage},phone_number=#{shop.phoneNumber} where id=#{shop.id}
    </update>

    <delete id="removeEntity">
        Delete from Shops where id=${id}
    </delete>

    <select id="getEntityById" resultMap="ShopResultMap">
        Select * from Shops where id=${id}
    </select>

</mapper>
