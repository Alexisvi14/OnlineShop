<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.solvd.OnlineShop.dao.IAppointmentDAO">
    <resultMap type = "com.solvd.OnlineShop.bin.Appointment"
               id= "AppointmentResultMap"   autoMapping="false">
        <id column="id" property="id" />
        <result column = "date" property = "date"/>
        <result column = "time" property = "time"/>
    </resultMap>

    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="true">
        Insert into Appointments (date,time) values (#{appointment.date},#{appointment.time})
    </insert>

    <update id="updateEntity">
        Update Appointments set date=#{appointment.date},time=#{appointment.time} where id=#{appointment.id}
    </update>

    <delete id="removeEntity">
        Delete from Appointments where id=${id}
    </delete>

    <select id="getEntityById" resultMap="AppointmentResultMap">
        Select * from Appointments where id=${id}
    </select>

</mapper>