<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.OnlineShop.dao.ICardDAO">
    <resultMap type="com.solvd.OnlineShop.bin.Card"
               id="CardResultMap" autoMapping="false">
        <id column="id" property="id"/>
        <result column="number" property="number"/>

    </resultMap>

    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="true">
        Insert into Cards (id,number) values (#{card.id},#{card.number})
    </insert>

    <update id="updateEntity">
        Update Cards set balance=#{card.id},cbu=#{card.number} where id=#{card.id}
    </update>

    <delete id="removeEntity">
        Delete from Cards where id=${id}
    </delete>

    <select id="getEntityById" resultMap="CardResultMap">
        Select * from Cards where id=${id}
    </select>
</mapper>
